{
    "manifest_version":2,
    "name": "Scratch Emojis",
    "description":"Meow! Chat with Scratchers using the cute emojis! :3",
    "version":"1.0",
    "icons":{"546":"icons/icon.png"},
    "browser_action":{
        "default_icon":"icons/icon.png",
        "default_popup":"Popups/Popup.html"
    },
    "permissions":[
        "https://scratch.mit.edu/*",
        "activeTab",
        "tabs"
    ],
    "incognito":"not_allowed",
    "content_scripts":[
        {
            "matches":["https://scratch.mit.edu/*"],
            "run_at":"document_end",
            "js":["ServiceAssigner.js"]
        }
    ],

    "web_accessible_resources":[
        "Stylesheets/*",
        "images/*",
        "AddEmojis.js",
        "BetterEmojis.js",
        "BlankAlert.js",
        "icons/*"

    ]
    
}